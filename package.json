{
  "name": "@neabyte/typescript-helper",
  "version": "0.1.0",
  "description": "A tool that collects and organizes TypeScript error messages from the official repository",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && tsc-alias -f -fe .js && npm run minify",
    "minify": "find dist -name '*.js' -exec terser {} --compress --mangle -o {} \\;",
    "dev": "tsc --watch",
    "lint": "eslint src/**/**/*.ts",
    "lint:fix": "eslint src/**/**/*.ts --fix",
    "format": "prettier --write src/**/**/*.ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "code-analysis",
    "compiler",
    "data-collection",
    "dataset",
    "diagnostics",
    "error-codes",
    "error-database",
    "error-messages",
    "errors",
    "javascript",
    "json",
    "microsoft-typescript",
    "nodejs",
    "programming",
    "static-analysis",
    "tsc",
    "typescript",
    "typescript-errors",
    "validation"
  ],
  "author": {
    "name": "NeaByteLab",
    "email": "me@neabyte.com",
    "url": "https://github.com/NeaByteLab"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NeaByteLab/TypeScript-Helper.git"
  },
  "bugs": {
    "url": "https://github.com/NeaByteLab/TypeScript-Helper/issues"
  },
  "homepage": "https://github.com/NeaByteLab/TypeScript-Helper#readme",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-sonarjs": "^3.0.5",
    "prettier": "^3.6.2",
    "terser": "^5.44.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
